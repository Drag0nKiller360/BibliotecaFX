<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.bibliotecafx.controllers.MenuInicialController">
    <top>
        <MenuBar>
            <Menu text="Gerenciar">
                <MenuItem onAction="#abrirGerenciarLivros" text="Livros" />
                <MenuItem onAction="#abrirGerenciarMembros" text="Membros" />
                <MenuItem onAction="#abrirGerenciarEmprestimos" text="Empréstimos" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="216.0" prefWidth="425.0" spacing="10">
            <Label style="-fx-font-size: 16px;" text="Bem-vindo ao Gerenciamento da Biblioteca Virtual!" />
            <Button onAction="#abrirGerenciarLivros" text="Gerenciar Livros" />
            <Button onAction="#abrirGerenciarMembros" text="Gerenciar Membros" />
            <Button onAction="#abrirGerenciarEmprestimos" text="Gerenciar Empréstimos" />
        </VBox>
    </center>
</BorderPane>
