<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bibliotecafx.controllers.GerenciarMembrosController">
    <top>
        <Label text="Gerenciar Membros" style="-fx-font-size: 18px; -fx-padding: 10;" />
    </top>
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <TableView fx:id="tabelaMembros">
                <columns>
                    <TableColumn text="ID" fx:id="colunaId" />
                    <TableColumn text="Nome" fx:id="colunaNome" />
                    <TableColumn text="Email" fx:id="colunaEmail" />
                </columns>
            </TableView>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Adicionar Membro" onAction="#adicionarMembro" />
                <Button text="Editar Membro" onAction="#editarMembro" />
                <Button text="Remover Membro" onAction="#removerMembro" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
